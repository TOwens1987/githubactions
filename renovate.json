{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["regex"],
  "branchPrefix": ["release/"],
  "prBodyTemplate": "{{{table}}}{{{prBodyNotes}}}",

  "regexManagers": [
    {
      "description": "Update HCL Plugins",
      "fileMatch": [".hcl$"],
      "matchStrings": [
        "name\\s*=\\s\"anothertool\"\\n\\s*enabled\\s*=\\s\"true\"\\n\\s*revision\\s=\\s\"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "TOwens1987/anothertool",
      "depNameTemplate": "Testing",
      "extractVersionTemplate": "^(?<version>.*)$",
      "versioningTemplate": "semver"
    },
    {
      "description": "Update HCL Plugins",
      "fileMatch": [".hcl$"],
      "matchStrings": [
        "name\\s*=\\s\"testtool\"\\n\\s*enabled\\s*=\\s\"true\"\\n\\s*revision\\s=\\s\"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "TOwens1987/testtool",
      "depNameTemplate": "Testing",
      "extractVersionTemplate": "^(?<version>.*)$",
      "versioningTemplate": "semver"
    }
  ]
}