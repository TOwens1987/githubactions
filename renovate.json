{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],

  "terragrunt": {
    "fileMatch": ["^terragrunt/.*\\.hcl$"]
  },

  "regexManagers": [
  {
    "fileMatch": ["terragrunt.hcl$"],
    "matchStringsStrategy": "any",
    "matchStrings": [
      "revision =(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "appdynamics",
      "datasourceTemplate": "terragrunt"
    }
  ]
}