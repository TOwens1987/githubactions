{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  
  "regexManagers": [
    {
      "description": "Update custom tag",
      "fileMatch": [".hcl$"],
      "matchStrings": [
        "revision = \"(?<currentValue>.*?)\" # (?<datasource>.*?)/(?<depName>.*?)\\s"
      ],
      "depNameTemplate": "TOwens1987/GitVersioning",
      "datasourceTemplate": "github-releases"
    }
  ]
}