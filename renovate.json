{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],

  "terragrunt": {
    "fileMatch": ["^terragrunt/.*\\.hcl$"]
  },

  "regexManagers": [
    {
      "description": "Update custom tag",
      "fileMatch": [".hcl$"],
      "matchStrings": [
        "revision = \"(?<currentValue>.*?)\""
      ],
      "depNameTemplate": "TOwens1987/GitVersioning",
      "autoReplaceStringTemplate": "revision = {{{newValue}}}",
      "datasourceTemplate": "github-releases"
    }
  ]
}