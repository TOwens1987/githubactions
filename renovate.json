{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignoreUnstable": false,
  "enabledManagers": ["regex"],
  "branchPrefix": ["release/"],
  "prBodyTemplate": "{{{table}}}{{{notes}}}{{{changelogs}}}{{{footer}}}",
  "labels": ["pre-release"],
  "packageRules": [
    {
      "description": "group depends",
      "matchPaths": ["*"],
      "groupName": "dev",
      "separateMajorMinor": "false"
    }
  ],

  "regexManagers": [
    {
      "description": "Update HCL Plugins",
      "fileMatch": [".hcl$"],
      "matchStrings": [
        "name\\s*=\\s\"anothertool\"\\n\\s*enabled\\s*=\\s\"true\"\\n\\s*revision\\s=\\s\"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "TOwens1987/anothertool",
      "depNameTemplate": "dev",
      "extractVersionTemplate": "^(?<version>.*)$",
      "versioningTemplate": "semver"
    },
    {
      "description": "Update HCL Plugins",
      "fileMatch": [".hcl$"],
      "matchStrings": [
        "name\\s*=\\s\"testtool\"\\n\\s*enabled\\s*=\\s\"true\"\\n\\s*revision\\s=\\s\"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "TOwens1987/testtool",
      "depNameTemplate": "dev",
      "extractVersionTemplate": "^(?<version>.*)$",
      "versioningTemplate": "semver"
    }
  ]
}